{
  "name": "uptools",
  "main": "worker/index.ts",
  "compatibility_date": "2025-08-10",

  "assets": {
    "directory": "./dist",
    "binding": "ASSETS"
  },

  "vars": {
    "CORS_ORIGINS": "https://www.uptools.in,https://uptools.in,http://localhost:5173",
    "PROVIDER_DEFAULT": "perplexity",
    "LOG_LEVEL": "info",

    "PPLX_BASE": "https://api.perplexity.ai",
    "PPLX_MODEL": "sonar",

    "GOOGLE_GENAI_BASE": "https://generativelanguage.googleapis.com/v1beta",
    "GOOGLE_MODEL": "gemini-2.5-flash",

    "GROQ_BASE": "https://api.groq.com/openai/v1",
    "GROQ_MODEL": "llama-3.1-70b-versatile"
  },

  "build": {
    "command": "npm run build",
    "watch_dir": [
      "src",
      "style.css",
      "index.html",
      "ai-writer",
      "income-tax-tool",
      "canada-hst-tool",
      "canada-crs-tool",
      "gst-calculator",
      "currency-converter",
      "pan-validator",
      "ifsc-finder",
      "ip-address",
      "image-tool",
      "uuid-generator",
      "json-formatter",
      "base64-encoder",
      "word-counter",
      "bmi-calculator",
      "emi-calculator",
      "fd-calculator",
      "sip-calculator",
      "text-case-converter",
      "unit-converter",
      "qr-generator",
      "color-picker",
      "whatsapp-chat",
      "whatsapp-stickers",
      "games/2048",
      "games/snake",
      "games/sudoku",
      "games/tic-tac-toe",
      "games/memory-match",
      "games/love-test",
      "ai-plagiarism",
      "resume-analyzer",
      "scripts",
      "worker"
    ]
  },

  "dev": {
    "ip": "127.0.0.1",
    "port": 8787,
    "local_protocol": "http"
  }
}
